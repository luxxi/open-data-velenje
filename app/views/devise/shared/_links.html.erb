<%- if controller_name != 'sessions' %>
  <%= link_to "Vpiši se", new_session_path(resource_name), class: 'btn btn-outline btn-info' %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Ustvari račun", new_registration_path(resource_name), class: 'btn btn-outline btn-info' %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Pozabljeno geslo?", new_password_path(resource_name), class: 'btn btn-outline btn-info' %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Niste dobili potrditvenega e-maila?", new_confirmation_path(resource_name), class: 'btn btn-outline btn-info' %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Niste dobili navodil za odklep?", new_unlock_path(resource_name), class: 'btn btn-outline btn-info' %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Vpišite se z #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'btn btn-outline btn-info' %>
  <% end -%>
<% end -%>
