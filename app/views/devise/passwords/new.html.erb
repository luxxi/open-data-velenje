<div class="col-md-6 col-md-offset-3">
  <div class="login-panel panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Ste pozabili geslo?</h3>
    </div>
    <div class="panel-body">
      <%= image_tag 'logo-blue', class: 'img-responsive' %>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
          <fieldset>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'E-mail', class: 'form-control' %>
          </div>
          <%= f.submit "Ponastavi geslo", class: 'btn btn-login btn-sm' %>
        </fieldset>
      <% end %>
      <div class="container-fluid">
        <div class="col-xs-offset-3 col-sm-offset-3 col-md-offset-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
